<h1>Edit your lesson!</h1>

<form action="/lessons/<%= @lesson.id %>" method="post">
  <input name='_method' type='hidden' value='patch'>
  <label for="lesson_name">Name</label><br>
  <input id="lesson_name" name="name" type="text"><br>
  <label for="lesson_description">Description</label><br>
  <textarea id="lesson_description" name="description">Enter Lesson here...</textarea><br>
  <button>Update Lesson</button>
</form>
